<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".TicTacToeActivity">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/one"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_1"
                android:textSize="70sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_2"
                android:textSize="70sp" />

            <Button
                android:id="@+id/three"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_3"
                android:textSize="70sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/four"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_4"
                android:textSize="70sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_5"
                android:textSize="70sp" />

            <Button
                android:id="@+id/six"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_6"
                android:textSize="70sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/seven"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_7"
                android:textSize="70sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_8"
                android:textSize="70sp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/_9"
                android:textSize="70sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/information"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/human"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/humanW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/human"
            android:text="@string/defaultWins"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/ties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/human"
            android:text="@string/ties"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/android" />

        <TextView
            android:id="@+id/tiesW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ties"
            android:text="@string/defaultWins"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/ties"
            android:text="@string/android"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/androidW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/android"
            android:text="@string/defaultWins"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>